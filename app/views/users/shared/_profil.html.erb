  <%= simple_form_for(current_user) do |f| %>
  <div class="form-container">
      <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    label:'Prénom',
                    input_html: { autocomplete: "prénom" }%>
      <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    label:'Nom',
                    input_html: { autocomplete: "nom" }%>
      <%= f.input :adress,
                    required: false,
                    autofocus: true,
                    label:'Adresse',
                    input_html: { autocomplete: "address" }%>
      <%= f.input :phone,
                    required: false,
                    autofocus: true,
                    label:'Téléphone',
                    input_html: { autocomplete: "phone" }%>
      <!-- <%= f.input :avatar,
                    label:'Selectionner une photo',
                    as: :file, input_html: { accept: "image/*" }%> -->
      <%= f.submit%>
  </div>
<% end %>
<div class="flex d-flex justify-content-center mt-3 ">
  <%= link_to "changer mot de passe", edit_user_registration_path, class: "btn btn-ghost" %>
  <%= link_to "retour au dashboard", root_path , class: "btn btn-ghost"%>
</div>